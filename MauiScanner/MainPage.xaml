<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:local="clr-namespace:MauiScanner"
             x:Class="MauiScanner.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="NumericButtonStyle" TargetType="Button">
                <Setter Property="WidthRequest" Value="60"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#393939}"/>
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#04548c, Dark=#048CEC}"/>
                <Setter Property="BorderColor" Value="{AppThemeBinding Light=#04548c, Dark=#048CEC}"/>
                <Setter Property="BorderWidth" Value="0.5"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>


    <ScrollView Margin="0" Padding="0">
        <VerticalStackLayout BackgroundColor="{AppThemeBinding Light=#e1eef4, Dark=Black}" Margin="0" Padding="0">
            <Grid Margin="0" Padding="0" ColumnDefinitions="*,40,40" RowSpacing="0" ColumnSpacing="0" HorizontalOptions="FillAndExpand" x:Name="tittleGrid">
                <Image Grid.ColumnSpan="3" Margin="0" VerticalOptions="Start"
                    Source="bilina_header_cteni_sm.png"
                    Aspect="AspectFit"
                    SemanticProperties.Description="logo Bíliny" x:Name="imageTitle" SizeChanged="imageTitle_SizeChanged" />

                <ImageButton Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start" Source="user.svg" Clicked="backToJobsClicked" WidthRequest="25"/>
                <ImageButton Grid.Column="2" VerticalOptions="Center" Source="odhlaseni.png" WidthRequest="20" Clicked="LogOut_Clicked"/>
            </Grid>

            <StackLayout 
            VerticalOptions="FillAndExpand"
            Padding="30,30"
            Spacing="0">
                <Border BackgroundColor="Transparent" Stroke="Gray" StrokeThickness="0.5">
                    <cv:CameraView x:Name="cameraView" HeightRequest="100" WidthRequest="400" HorizontalOptions="FillAndExpand" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" BarcodeDetected="cameraView_BarcodeDetected"/>
                </Border>
                <StackLayout x:Name="visiblePlatnost" IsVisible="False" Padding="10">
                    <StackLayout x:Name="visibleColor" Spacing="5"></StackLayout>
                    <Border Padding="1" x:Name="backgraundPlatnost" WidthRequest="300" HorizontalOptions="CenterAndExpand"  BackgroundColor="#B3FFFFFF" StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>

                        <Label x:Name="cartInfo" TextType="Text" HorizontalTextAlignment="Center" Margin="10" TextColor="White" FontFamily="OpenSans-Bold"/>
                    </Border>
                    
                </StackLayout>
                <Frame x:Name="noSale" IsVisible="False" Padding="1" BackgroundColor="{AppThemeBinding Light=LightGray, Dark=#393939}" BorderColor="{AppThemeBinding Light=Gray, Dark=Gray}">
                    <Label Margin="10" TextType="Text" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light=Black, Dark=White}" Text="Není k dispozici žádná sleva."/>
                </Frame>
                <CollectionView x:Name="ColectionViewSales" SelectionMode="Multiple" SelectionChanged="ColectionViewSales_SelectionChanged"> 
                    <CollectionView.Resources>
                        <ResourceDictionary>
                            <local:StatusToColorConverter x:Key="StatusToColorConverter"/>
                            <local:StatusToColorConverterClicked x:Key="StatusToColorConverterClicked"/>
                            <local:StatusToColorConverterClickedText x:Key="StatusToColorConverterClickedText"/>
                        </ResourceDictionary>
                    </CollectionView.Resources>


                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10" Margin="3" BorderColor="Transparent" InputTransparent="True" BackgroundColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal" />
                                        <VisualState x:Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="{Binding Status, Converter={StaticResource StatusToColorConverterClicked}}" />
                                                <Setter TargetName="NameLabel" Property="Label.TextColor" Value="{Binding Status, Converter={StaticResource StatusToColorConverterClickedText}}"/>
                                                <Setter TargetName="InfoLabel" Property="Label.TextColor" Value="{Binding Status, Converter={StaticResource StatusToColorConverterClickedText}}"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <StackLayout InputTransparent="True">
                                    <Label Text="{Binding SaleName}" Style="{StaticResource LabelBolt}" x:Name="NameLabel" TextColor="Black"/>
                                    <Label Text="{Binding InfoText}" x:Name="InfoLabel" TextColor="Black"/>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>


                </CollectionView>
                <VerticalStackLayout x:Name="Kalkulacka" IsVisible="True">
                    <VerticalStackLayout Margin="5" x:Name="cenaKalkulacka" IsVisible="False">
                        <Grid  ColumnDefinitions="*,*" RowDefinitions="20,20">
                            <Label Grid.Row="0" Grid.Column="0" Text="Cena před slevou: " WidthRequest="140" HorizontalTextAlignment="End"/>
                            <Label Grid.Row="0" Grid.Column="1" x:Name="entryNum"  HorizontalTextAlignment="Start"  IsVisible="False"/>

                            <Label  Grid.Row="1" Grid.Column="0" Text="Cena po slevě: " WidthRequest="140" HorizontalTextAlignment="End"/>
                            <Label  Grid.Row="1" Grid.Column="1" x:Name="cena" HorizontalTextAlignment="Start" IsVisible="False" TextColor="#006c00" FontAttributes="Bold"/>
                        </Grid>
                    </VerticalStackLayout>
                    <VerticalStackLayout x:Name="IdCardLayour" Padding="10,10">
                        <Grid  ColumnDefinitions="*,*" RowDefinitions="20">
                            <Label Text="Zadat kód ručně: " Grid.Column="0" TextColor="{AppThemeBinding Light=Black, Dark=White}"/>
                            <Label x:Name="idCardEntry" Text="" Grid.Column="1" TextColor="{AppThemeBinding Light=#04548c, Dark=#048CEC}"/>
                        </Grid>
                    </VerticalStackLayout>
                    
                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="0">
                        <Button Text="1" Clicked="Keyboard_1" Style="{StaticResource NumericButtonStyle}"/>
                        <Button Text="2" Clicked="Keyboard_2" Style="{StaticResource NumericButtonStyle}"/>
                        <Button Text="3" Clicked="Keyboard_3" Style="{StaticResource NumericButtonStyle}"/>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="0" >
                        <Button Text="4" Clicked="Keyboard_4" Style="{StaticResource NumericButtonStyle}"/>
                        <Button Text="5" Clicked="Keyboard_5" Style="{StaticResource NumericButtonStyle}"/>
                        <Button Text="6" Clicked="Keyboard_6" Style="{StaticResource NumericButtonStyle}"/>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="0" >
                        <Button Text="7" Clicked="Keyboard_7" Style="{StaticResource NumericButtonStyle}"/>
                        <Button Text="8" Clicked="Keyboard_8" Style="{StaticResource NumericButtonStyle}"/>
                        <Button Text="9" Clicked="Keyboard_9" Style="{StaticResource NumericButtonStyle}"/>
                    </HorizontalStackLayout>
                    
                    <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="0">
                        <Button x:Name="button0" Text="0" Clicked="Keyboard_0" Style="{StaticResource NumericButtonStyle}"/>
                        <ImageButton CornerRadius="10" Padding="10" MaximumHeightRequest="50" Source="send_icon.png" WidthRequest="60" HeightRequest="40" Margin="5" x:Name="decimalOrSend"  Clicked="Keyboard_Decimal" BackgroundColor="Green"/>
                        <Button Text="←" Clicked="Keyboard_back" Style="{StaticResource NumericButtonStyle}"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
                <VerticalStackLayout x:Name="Butt" IsVisible="False">
                    <Button Text="Uplatnit slevu" Clicked="Use_Sale" BackgroundColor="Green" BorderColor="Green" Margin="5" TextColor="White"/>
                    <Button Text="Resetovat" Clicked="ResetButton" BackgroundColor="#006da4" BorderColor="#006da4" Margin="5,0" TextColor="White"/>
                </VerticalStackLayout>                
                <VerticalStackLayout x:Name="maunalyButton" IsVisible="False">
                    <Button Text="Zadat ručně" Clicked="ManualyAddCardId" Margin="5" BackgroundColor="#908f90" BorderColor="#908f90" TextColor="Black"/>
                </VerticalStackLayout>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
